<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_135sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="left">


    <LinearLayout
        android:layout_width="@dimen/_135sdp"
        android:layout_height="@dimen/_105sdp"
        android:background="@drawable/edit_border2"
        android:gravity="right"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title_euipment"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SET-TOP BOX"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/plansubcriptioncheckbox"
                android:gravity="right"
                android:focusable="true"
                android:theme="@style/CustomCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <TextView
            android:id="@+id/txt_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record and Store"
            android:layout_gravity="center"
            android:textColor="@color/backround_color"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hd_programs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hd Programes+"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
           />


        <TextView
            android:id="@+id/txt_prices"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/shadow_rounded"
            android:gravity="center"
            android:text="$24.08/mo"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>

