<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_channel"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_about"
        android:background="@color/white_color">

        <TextView
            android:id="@+id/txt_channel_title"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/btn_background_red"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="Channel List"
            android:textColor="@color/white_color"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_channel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:padding="7dp"
                android:text="General"
                android:textColor="@color/black_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_channel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:minHeight="35dp"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_below="@+id/ll_channel_list"
            android:background="@color/compare_line" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_premuim_channel"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_channel">

        <TextView
            android:id="@+id/txt_premuim_channel_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_color"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="Premium Channels List"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_premioum_channel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_premuim_channel_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:padding="7dp"
                android:text="Premium"
                android:textColor="@color/black_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_premuim_channel_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:minHeight="35dp"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_premuim_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/txt_premuim_channel_detail"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_premioum_channel_list"
            android:background="@color/compare_line" />
    </RelativeLayout>

</LinearLayout>