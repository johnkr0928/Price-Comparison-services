<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_color_ServiceDealz"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backround_color_ServiceDealz"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/shadow"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <include layout="@layout/compare_top"></include>

                <LinearLayout
                    android:id="@id/ll_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_internet_devider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:background="@color/compare_line" />

                    <TextView
                        android:id="@+id/txt_internet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.1"
                        android:paddingLeft="7dp"
                        android:text="Internet"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <include layout="@layout/speed_layout"></include>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.1"
                        android:paddingLeft="7dp"
                        android:text="Telephone"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <include layout="@layout/minutes_layout"></include>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_cable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.1"
                        android:paddingLeft="7dp"
                        android:text="Cable/TV"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <include layout="@layout/channel_layout"></include>
                </LinearLayout>


                <include layout="@layout/installation_equipment_layout"></include>

                <include layout="@layout/offer_layout"></include>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>