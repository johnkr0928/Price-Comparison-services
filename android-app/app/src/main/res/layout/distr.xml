<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_color_ServiceDealz"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_claculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/shadow_rounded"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Please select your usage type"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Select variation based upon your bandwidth consumption"
            android:textColor="#949393"
            android:textSize="@dimen/_8sdp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/rounded_white_background_profile"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/low"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <TextView
                        android:id="@+id/low_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Low"
                        android:textColor="#248dc2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <TextView
                        android:id="@+id/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Medium"
                        android:textColor="#248dc2" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/high"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <TextView
                        android:id="@+id/high_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="High"
                        android:textColor="#248dc2" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_claculator"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@color/white_color"
            android:paddingTop="@dimen/_15sdp"></FrameLayout>

    </LinearLayout>


</ScrollView>