<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gift"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_doller"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight=".7"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/txt_gift_price"
                android:text="You won "
                android:textColor="@color/white_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="$ 10"
                android:textColor="#ffe634"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/txt_gift_price"
                android:text=" gift card"
                android:textColor="@color/white_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_count_active_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_gift_price"
                android:layout_centerHorizontal="true"
                android:text="for deal activation."
                android:textColor="@color/white_color"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
