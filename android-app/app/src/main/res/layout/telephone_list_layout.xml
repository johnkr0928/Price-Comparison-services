<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_country_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_color"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="Countries"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_country_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_country_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:padding="7dp"

                android:text="Country List"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_country_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_country_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_channel">

        <TextView
            android:id="@+id/txt_features_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_color"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Features"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_features_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_features_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:padding="7dp"
                android:text="Features List"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_features_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_features_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>