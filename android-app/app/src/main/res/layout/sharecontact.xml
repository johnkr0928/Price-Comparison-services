<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_background">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/ticksharecontact"
                android:textColor="@color/red_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_thank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Thank You !"
                android:fontFamily="fonts/kalinga.ttf"
                android:textColor="@color/black_color"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_thank"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="#696969"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="We will contact you within 24 hours.\n\nProvide access to your address book and \nget $10 from us, and help your \nfriends &amp; family $ave."
                android:textSize="13sp" />

            <TextView
                android:id="@+id/devider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_desc"
                android:layout_marginTop="10dp"
                android:background="@color/white_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/devider1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_dontshare"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btn_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DON'T SHARE"
                    android:textColor="@color/white_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sharebutton"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="SHARE ADDRESSBOOK"
                    android:textColor="@color/white_color"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|top"
            android:scaleType="fitXY"
            android:src="@drawable/gtk_close"
            android:visibility="gone" />

    </RelativeLayout>


</ScrollView>