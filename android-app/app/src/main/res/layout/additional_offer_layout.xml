<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_offertitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_color"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="offer"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_channel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_offertitle"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:padding="7dp"
                android:text="Price"
                android:textColor="@color/black_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_offer_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_premuim_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_channel">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/compare_line" />

        <TextView
            android:id="@+id/txt_premuim_channel_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_color"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="Premium Channels List"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_premioum_channel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_premuim_channel_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/offer_layouttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:maxLines="1"
                android:padding="7dp"
                android:text="Offer"
                android:textColor="@color/black_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/compare_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_important_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_premuim_viewmore"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/txt_premuim_channel_detail"
                    android:background="#4687C7"
                    android:text="View more"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_below="@+id/ll_premioum_channel_list"
            android:background="@color/compare_line" />
    </RelativeLayout>

</LinearLayout>