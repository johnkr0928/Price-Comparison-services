<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_marginTop="56dp"    android:background="@color/backround_color_general">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="20dp"        android:layout_marginLeft="20dp"        android:layout_marginRight="20dp"        android:layout_marginTop="30dp"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:weightSum="3">            <TextView                android:id="@+id/btn_general_info"                android:layout_width="match_parent"                android:layout_height="40dp"                android:layout_weight="1"                android:background="@color/button_backround_color"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:text="Seller Name"                android:textColor="@color/white_color"                android:textStyle="bold" />            <View                android:layout_width="1dp"                android:layout_height="40dp"                android:background="@color/white_color" />            <TextView                android:id="@+id/btn_services"                android:layout_width="match_parent"                android:layout_height="40dp"                android:layout_weight="1"                android:background="@color/button_backround_color"                android:gravity="center"                android:text="No. of User"                android:textColor="@color/white_color"                android:textStyle="bold" />            <View                android:layout_width="1dp"                android:layout_height="40dp"                android:background="@color/white_color" />            <TextView                android:id="@+id/btn_preferences"                android:layout_width="match_parent"                android:layout_height="40dp"                android:layout_weight="1"                android:background="@color/button_backround_color"                android:gravity="center"                android:text="Share With Us"                android:textColor="@color/white_color"                android:textStyle="bold" />        </LinearLayout>        <View            android:layout_width="match_parent"            android:layout_height="4dp"            android:background="@color/black_color" />        <ListView            android:id="@+id/lv_seller"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/white_color"            android:divider="@color/backround_color_general"            android:dividerHeight="1dp"            android:scrollbars="none">        </ListView>    </LinearLayout></RelativeLayout>