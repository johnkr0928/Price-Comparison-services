<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_color_ServiceDealz"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backround_color_ServiceDealz">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/offer_level"
                android:padding="10dp">

                <FrameLayout
                    android:id="@+id/ll_offer"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentLeft="true"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_3sdp">


                        <TextView
                            android:id="@+id/txt_dollar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:text="$"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_dollar"
                            android:gravity="left"
                            android:maxLength="9"
                            android:paddingLeft="2dp"
                            android:text="99/"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txt_price"
                            android:layout_toRightOf="@+id/txt_price"
                            android:text=" /month"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_8sdp" />
                    </RelativeLayout>


                </FrameLayout>

                <ImageView
                    android:id="@+id/img_company"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_below="@+id/ll_offer"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/_15sdp" />

                <LinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ll_offer"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/txt_deal_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/txt_short_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#7f7f7f"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/txt_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Contarct:12 month"
                        android:textColor="#7f7f7f"
                        android:textSize="@dimen/_9sdp" />

                    <LinearLayout
                        android:id="@+id/ll_effective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cable_effective_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-medium"
                            android:text="Effective Price  "
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtcable_effective_deal_price"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:maxLength="14"
                            android:text="$64.99"
                            android:textColor="#000"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/compare_line" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginTop="-25dp"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <!--<Button-->
                    <!--android:id="@+id/txt_activate"-->
                    <!--android:layout_width="@dimen/_75sdp"-->
                    <!--android:layout_height="@dimen/_25sdp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginBottom="@dimen/_2sdp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/activate_drawable"-->
                    <!--android:drawableLeft="@mipmap/headphone"-->
                    <!--android:enabled="true"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingLeft="@dimen/_13sdp"-->
                    <!--android:paddingRight="@dimen/_10sdp"-->
                    <!--android:text="Order"-->
                    <!--android:textColor="@color/white_color"-->
                    <!--android:textSize="@dimen/_7sdp"-->
                    <!--android:textStyle="bold" />-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Total price"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_price_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="$74.49"
                    android:textColor="#f77524"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </RelativeLayout>

            <View

                android:id="@+id/devider1111"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ll_button"></View>

            <RelativeLayout
                android:id="@+id/rl_layout_rate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_description"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:background="#ececec"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/black_color"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_star_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_rate">

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:progressTint="#fec923" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ll_star_rating"
                    android:gravity="center"
                    android:text="0 reviews"
                    android:textColor="@color/black_color"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_sharecable"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_reviews"
                    android:background="@drawable/share_icon"
                    android:text="High-Speed 3G/4G Data" />

                 <Button
                     android:id="@+id/txt_activate"
                     android:layout_width="@dimen/_65sdp"
                     android:layout_height="@dimen/_17sdp"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginBottom="@dimen/_2sdp"
                     android:layout_marginRight="10dp"
                     android:background="@drawable/activate_drawable"
                     android:drawableLeft="@drawable/headphone"
                     android:enabled="true"
                     android:gravity="center"
                     android:paddingLeft="@dimen/_13sdp"
                     android:paddingRight="@dimen/_10sdp"
                     android:text="Order"
                     android:visibility="visible"
                     android:textColor="@color/white_color"
                     android:textSize="@dimen/_7sdp"
                     android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:layout_below="@+id/devider1111"
                android:layout_alignParentEnd="true">

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/compare_line" />-->
                <TextView
                    android:id="@+id/txt_about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:text="About the Offer"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    />

                <TextView
                    android:id="@+id/txt_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_about_title"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/_8sdp"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/txt_channel_title"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txt_about"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_background_red"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"

                    android:text="Channel List"
                    android:textColor="@color/white_color"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_channel_title"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:id="@+id/chanel_below"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_channel_title"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/compare_line"
                        android:padding="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/custom_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white_color"
                        android:padding="@dimen/_6sdp"
                        android:text="Choose Your Custom TV Plan"
                        android:textColor="#000"
                        android:textStyle="bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/horizontal_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/custom_tv"
                        android:background="#fff"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:scrollbars="horizontal" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:id="@+id/custom_tv_below"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/compare_line" />

                    <TextView
                        android:id="@+id/premimum_channel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Get More With Premimum Channels"
                        android:textColor="#000"
                        android:textStyle="bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/horizontal_recycler_view_premimum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/premimum_channel"
                        android:background="#fff"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:scrollbars="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lll"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:id="@+id/premimum_below"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/compare_line" />

                    <TextView
                        android:id="@+id/channe_equipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/premimum_below"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Channel Equipments"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/horizontal_recycler_view_equipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/channe_equipment"
                        android:background="#fff"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:scrollbars="horizontal" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>

