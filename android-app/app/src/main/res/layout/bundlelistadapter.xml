<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_170sdp"
    android:layout_height="@dimen/_132sdp"
    android:background="@drawable/bundlelistgradient"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/txt_bundlecombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:maxLines="1"
        android:text=""
        android:textColor="#ad7d68"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_bundlecombo"
        android:background="@color/compare_line" />

    <RelativeLayout
        android:id="@+id/ll_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:id="@+id/img_company"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_deal_description"
        android:layout_below="@+id/txt_deal_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_7sdp">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_dollar"
            android:gravity="left"
            android:maxLength="9"
            android:paddingLeft="2dp"
            android:text="99/"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="Price: "
            android:textColor="#e8ad2e"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_deal_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_text_view"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black_color"
        android:textSize="@dimen/_9sdp" />

    <TextView
        android:id="@+id/txt_deal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:maxLines="2"
        android:text=" "
        android:textColor="#6f6d6e"
        android:textSize="@dimen/_9sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ll_img" />
</RelativeLayout>
