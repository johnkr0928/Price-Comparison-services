<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">

        <item name="android:windowBackground">@color/transparent</item>

    </style>

    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_drawable</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/starfill</item>
        <item name="android:indeterminateDrawable">@drawable/starhalffill</item>
    </style>

    <style name="BlueTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="PopupWindow" parent="@android:style/Widget.PopupWindow">
        <item name="android:popupBackground">@color/transparent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="colorPrimaryDark">@color/red_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/red_color</item>
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.Light">

    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Toolbar_Theme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>

    </style>

    <style name="MyAnimation.Window" parent="AppTheme2">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_in_left
        </item>
    </style>
    <style name="CustomCheck">
        <item name="colorAccent">@color/backround_color</item>
    </style>
</resources>
